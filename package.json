{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/harmless",
    "version": "0.0.3",
    "type": "module",
    "description": "A minimalistic reactive web framework written in TypeScript",
    "keywords": [
        "web",
        "reactive",
        "framework",
        "typescript",
        "harmless",
        "jsx"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/harmless",
    "homepage": "https://github.com/kayahr/harmless",
    "bugs": "https://github.com/kayahr/harmless/issues",
    "funding": "https://github.com/kayahr/harmless?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": {
        ".": "./lib/main/index.js",
        "./jsx-runtime": "./lib/main/jsx-runtime.js",
        "./jsx-dev-runtime": "./lib/main/jsx-runtime.js"
    },
    "scripts": {
        "clean": "rm -rf lib",
        "build": "run build:*",
        "build:compile": "tsc",
        "test": "run test:*",
        "test:unit": "ntest",
        "test:lint": "oxlint --type-aware --deny-warnings",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "prepare": "run clean build"
    },
    "devDependencies": {
        "@happy-dom/global-registrator": "20.0.10",
        "@kayahr/assert": "1.3.2",
        "@kayahr/cspell": "9.2.2-bundle.1",
        "@kayahr/npm-utils": "1.1.1",
        "@kayahr/ntest": "1.3.0",
        "@kayahr/oxlint-config": "1.11.0",
        "@kayahr/typedoc": "0.28.14-bundle.2",
        "@types/node": "24.10.0",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "@kayahr/cdi": "^0.3.0",
        "@kayahr/observable": "^1.2.0",
        "@kayahr/signal": "^4.2.0"
    }
}
